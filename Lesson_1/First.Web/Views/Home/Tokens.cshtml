@using Microsoft.AspNetCore.Authentication;

@{
    ViewData["Title"] = "Tokens & Claims";
}
<h2>@ViewData["Title"]</h2>

<h3>Tokens</h3>
<p>
    <span>Id Token :</span>
    <strong>@await ViewContext.HttpContext.GetTokenAsync("id_token")</strong>
</p>
<p>
    <span>Access Token :</span>
    <strong>@await ViewContext.HttpContext.GetTokenAsync("access_token")</strong>
</p>
<p>
    <span>Refresh Token :</span>
    <strong>@await ViewContext.HttpContext.GetTokenAsync("refresh_token")</strong>
</p>

<h3>Claims</h3>
@foreach(var claim in User.Claims)
{
    <p>
        <span>@claim.Type :</span>
        <strong>@claim.Value</strong>
    </p>
}